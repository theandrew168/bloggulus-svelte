{
	"name": "bloggulus",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"migrate": "tsx ./src/lib/server/postgres/migrate.ts",
		"start": "npm run migrate && node ./build/",
		"test": "npm run migrate && vitest run",
		"check": "tsc && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write ."
	},
	"dependencies": {
		"he": "^1.2.0",
		"lodash": "^4.17.21",
		"postgres": "^3.4.7",
		"rss-parser": "^3.13.0",
		"tsx": "^4.19.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.8.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/he": "^1.2.3",
		"@types/lodash": "^4.17.17",
		"@types/node": "^22.15.26",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.33.10",
		"svelte-check": "^4.2.1",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.1.4"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true,
		"importOrder": [
			"<BUILTIN_MODULES>",
			"",
			"<THIRD_PARTY_MODULES>",
			"",
			"^\\$lib/(.*)$",
			"",
			"^[.]"
		],
		"importOrderCaseSensitive": false,
		"importOrderTypeScriptVersion": "5.0.0",
		"importOrderParserPlugins": [
			"typescript"
		],
		"plugins": [
			"@ianvs/prettier-plugin-sort-imports",
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
