{
	"name": "bloggulus",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "tsx ./scripts/migrate.ts && node ./build/",
		"migrate": "tsx ./scripts/migrate.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write ."
	},
	"dependencies": {
		"he": "^1.2.0",
		"postgres": "^3.4.3",
		"rss-parser": "^3.13.0",
		"tsx": "^4.7.0"
	},
	"devDependencies": {
		"@flydotio/dockerfile": "^0.4.11",
		"@sveltejs/adapter-node": "^2.1.1",
		"@sveltejs/kit": "^2.3.2",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"@types/he": "^1.2.3",
		"@types/node": "^20.11.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.11"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
