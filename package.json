{
	"name": "bloggulus-svelte",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node ./build/",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"sync": "tsx ./scripts/sync.ts"
	},
	"dependencies": {
		"@prisma/client": "^5.7.0",
		"rss-parser": "^3.13.0"
	},
	"devDependencies": {
		"@flydotio/dockerfile": "^0.4.11",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.27.4",
		"@types/node": "^20.10.4",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"prisma": "^5.7.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"tsx": "^4.6.2",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true,
		"plugins": [
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
