{
	"name": "bloggulus",
	"version": "0.6.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"deploy": "ssh -t derz@bloggulus.com 'cd /usr/local/src/bloggulus-svelte && sudo mfd deploy'",
		"preview": "vite preview",
		"migrate": "tsx ./src/lib/server/tools/migrate.ts",
		"test": "NODE_ENV=test npm run migrate && vitest run",
		"check": "tsc && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write .",
		"update": "npm-check-updates -u"
	},
	"dependencies": {
		"@iarna/toml": "^2.2.5",
		"arctic": "^3.7.0",
		"croner": "^10.0.1",
		"p-limit": "^7.3.0",
		"pg": "^8.18.0",
		"prom-client": "^15.1.3",
		"rss-parser": "^3.13.0",
		"sql-template-strings": "^2.2.2",
		"tsx": "^4.21.0",
		"undici": "^7.22.0"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.7.1",
		"@sveltejs/adapter-node": "^5.5.3",
		"@sveltejs/kit": "^2.53.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/chance": "^1.1.7",
		"@types/lodash": "^4.17.23",
		"@types/minimist": "^1.2.5",
		"@types/pg": "^8.16.0",
		"@types/xml2js": "^0.4.14",
		"chance": "^1.1.13",
		"npm-check-updates": "^19.4.1",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"svelte": "^5.53.2",
		"svelte-check": "^4.4.3",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18",
		"xml2js": "^0.6.2"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true,
		"importOrder": [
			"<BUILTIN_MODULES>",
			"",
			"<THIRD_PARTY_MODULES>",
			"",
			"^\\$lib/(.*)$",
			"",
			"^[.]"
		],
		"importOrderCaseSensitive": false,
		"importOrderTypeScriptVersion": "5.0.0",
		"importOrderParserPlugins": [
			"typescript"
		],
		"plugins": [
			"@ianvs/prettier-plugin-sort-imports",
			"prettier-plugin-svelte"
		],
		"overrides": [
			{
				"files": "*.svelte",
				"options": {
					"parser": "svelte"
				}
			}
		]
	}
}
